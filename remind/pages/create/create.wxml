<view class="plan_main">
  <view class="tip">
    <input placeholder="请输入提醒内容" bindinput="contentInput" value='{{input}}' />
  </view>
  <view class="date">
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <input value='{{time}}' placeholder='选择时间' />
    </picker>
  </view>
</view>
<view class="save">
  <button class="btn" bindtap="handleBtn">保存</button>
</view>